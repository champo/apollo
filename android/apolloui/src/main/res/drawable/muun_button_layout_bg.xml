<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:height="@dimen/muun_button_layout_gradient_height">
        <shape android:shape="rectangle">
            <gradient
                    android:angle="90"
                    android:startColor="@color/muun_button_layout_bg"
                    android:endColor="@android:color/transparent" />
        </shape>
    </item>

    <item android:top="@dimen/muun_button_layout_gradient_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/muun_button_layout_bg" />
        </shape>
    </item>

</layer-list>
