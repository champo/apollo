<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:muun="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <io.muun.apollo.presentation.ui.view.MuunHeader
        android:id="@+id/select_currency_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        muun:elevated="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/select_currency_list"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:listitem="@layout/v_item_currency" />

</LinearLayout>